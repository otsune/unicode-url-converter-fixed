{
  "manifest_version": 3,
  "name": "Unicode URL Converter",
  "version": "1.0",
  "description": "p要素内の特殊Unicode文字を通常の記号に変換します",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Unicode URL Converter"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}

